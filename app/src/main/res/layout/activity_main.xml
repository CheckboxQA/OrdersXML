<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="96dp"
        android:text="₴ 676.20"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <TextView
        android:id="@+id/status"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:text="Очікує"
        android:fontFamily="@font/roboto"
        android:textColor="#04AED4"
        android:background="@drawable/status_background"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        app:layout_constraintLeft_toLeftOf="@+id/amount"
        />
    <TextView
        android:id="@+id/payment_method"
        android:layout_width="83dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:text="Готівка"
        android:fontFamily="@font/roboto"
        android:paddingEnd="10dp"
        android:background="@drawable/payment_type_background"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        app:layout_constraintRight_toRightOf="@+id/amount"
        />
    <ImageView
        android:id="@+id/cash_icon"
        android:layout_width="10dp"
        android:layout_height="11dp"
        app:layout_constraintStart_toStartOf="@+id/payment_method"
        app:layout_constraintTop_toTopOf="@+id/payment_method"
        android:src="@drawable/ic_cash"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/delivery_title"
        android:layout_width="153dp"
        android:layout_height="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="start|center_vertical"
        android:text="Доставка"
        android:textSize="12sp"
        android:textColor="#7F000000"
        app:layout_constraintStart_toStartOf="@id/back_arrow"
        app:layout_constraintTop_toBottomOf="@id/status"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delivery_info"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/delivery_background"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/address_title"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Адреса"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:textColor="#7F000000"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:id="@+id/address_info"
            android:layout_width="255dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toBottomOf="@+id/address_title"
            app:layout_constraintStart_toStartOf="@+id/address_title"
            android:text="вул. Хрещатик, 1 кв. 123"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/navigation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintEnd_toEndOf="@+id/address_title"
            app:layout_constraintTop_toTopOf="@+id/address_title"
            app:layout_constraintBottom_toBottomOf="@+id/address_info"
            android:src="@drawable/navigation"
            android:layout_marginEnd="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>