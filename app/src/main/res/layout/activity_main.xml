<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="96dp"
        android:text="₴ 676.20"
        android:textSize="48sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:text="Очікує"
        android:textColor="#04AED4"
        android:background="@drawable/status_background"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        app:layout_constraintLeft_toLeftOf="@+id/amount"
         />
    <TextView
        android:id="@+id/payment_method"
        android:layout_width="83dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:text="Готівка"
        android:paddingEnd="10dp"
        android:background="@drawable/payment_type_background"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        app:layout_constraintRight_toRightOf="@+id/amount"
        />
    <ImageView
        android:id="@+id/cash_icon"
        android:layout_width="10dp"
        android:layout_height="11dp"
        app:layout_constraintStart_toStartOf="@+id/payment_method"
        app:layout_constraintTop_toTopOf="@+id/payment_method"
        android:src="@drawable/ic_cash"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"/>




</androidx.constraintlayout.widget.ConstraintLayout>