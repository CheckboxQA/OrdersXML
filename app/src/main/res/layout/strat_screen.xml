<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreen">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/order_with_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"
        android:text="@string/order_with_delivery"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="false"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/order_without_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        android:layout_margin="10dp"
        android:text="@string/order_without_delivery"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/order_with_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>